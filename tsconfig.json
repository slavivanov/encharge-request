{
  "compilerOptions": {
    "outDir": ".build",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": true,
    // "checkJs": true, //TODO - enable this
    "target": "es5",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": ["es7", "esnext.asynciterable", "es2015.promise"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "downlevelIteration": true // Enable support of for ... of loops with target: es5
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/__mocks__/*", "./dist/**"]
}
