{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "jest": true,
    "mocha": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": 0,
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-continue": 0
  }
}
